{
  "apps": {
    "rss": {
      "host": "0.0.0.0",
      "port": 4321
    },
    "admin": {
      "host": "0.0.0.0",
      "keys": ["foo", "bar"],
      "port": 4322,
      "session": {
        "maxAge": 300000,
        "httpOnly": true,
        "secure": false,
        "sameSite": "strict",
        "renew": true
      }
    },
    "sync-releases-task": {
      "cron": "0 */12 * * *"
    }
  },
  "database": {
    "client": "better-sqlite3",
    "useNullAsDefault": true,
    "connection": {
      "filename": "./database/db.sqlite"
    },
    "migrations": {
      "directory": "./database/migrations",
      "loadExtensions": [".mjs"],
      "extension": "mjs"
    }
  },
  "itunes": {
    "searchUrl": "https://itunes.apple.com/search",
    "lookup": "https://itunes.apple.com/lookup"
  },
  "media": {
    "placeholderImage": "https://via.placeholder.com/512"
  },
  "releases": {
    "albums": "https://itunes.apple.com/lookup?id={{id}}&entity=album&media=music&sort=recent&limit=70",
    "songs": "https://itunes.apple.com/lookup?id={{id}}&entity=song&media=music&sort=recent&limit=100"
  }
}

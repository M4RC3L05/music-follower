{
  "apps": {
    "feed": {
      "host": "0.0.0.0",
      "port": 4321,
      "maxReleases": 50
    },
    "admin": {
      "host": "0.0.0.0",
      "keys": ["foo", "bar"],
      "port": 4322,
      "session": {
        "maxAge": "session",
        "httpOnly": true,
        "secure": false,
        "sameSite": "strict",
        "renew": true
      },
      "basicAuth": {
        "name": "foo",
        "pass": "bar"
      }
    },
    "jobs": {
      "sync-releases": {
        "cron": {
          "pattern": "* * * * *",
          "timezone": "Etc/GMT",
          "tickerTimeout": 1000
        },
        "max-release-time": "1 year"
      }
    }
  },
  "database": {
    "path": "./data/db.sqlite"
  },
  "logger": {
    "level": "info"
  },
  "remote": {
    "itunes": {
      "search": {
        "url": "https://itunes.apple.com/search",
        "searchArtists": {
          "limit": 8
        }
      },
      "lookup": {
        "url": "https://itunes.apple.com/lookup",
        "getLatestsArtistMusicReleases": {
          "limit": 70
        },
        "getLatestsArtistAlbumReleases": {
          "limit": 50
        }
      }
    }
  },
  "media": {
    "placeholderImage": "https://via.placeholder.com/512"
  }
}

{
  "apps": {
    "web": {
      "host": "127.0.0.1",
      "port": 4321,
      "basicAuth": {
        "username": "foo",
        "password": "bar"
      },
      "feed": {
        "maxReleases": 50
      }
    },
    "jobs": {
      "sync-releases": {
        "max-release-time": "1 year"
      }
    }
  },
  "database": {
    "path": "./data/app.db"
  },
  "remote": {
    "itunes": {
      "search": {
        "url": "https://itunes.apple.com/search",
        "searchArtists": {
          "limit": 8
        }
      },
      "lookup": {
        "url": "https://itunes.apple.com/lookup",
        "getLatestsArtistMusicReleases": {
          "limit": 70
        },
        "getLatestsArtistAlbumReleases": {
          "limit": 50
        }
      }
    }
  },
  "csrf": {
    "origin": "\\.*"
  },
  "media": {
    "remoteArtistsPlaceholderImage": "/public/images/remote-artist-image-default.svg"
  }
}

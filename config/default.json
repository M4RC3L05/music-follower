{
  "apps": {
    "feed": {
      "host": "127.0.0.1",
      "port": 4321,
      "maxReleases": 50
    },
    "api": {
      "host": "127.0.0.1",
      "port": 4323,
      "basicAuth": {
        "username": "foo",
        "password": "bar"
      }
    },
    "admin": {
      "host": "127.0.0.1",
      "port": 4322,
      "basicAuth": {
        "username": "foo",
        "password": "bar"
      },
      "services": {
        "api": {
          "url": "http://127.0.0.1:4323",
          "basicAuth": {
            "username": "foo",
            "password": "bar"
          }
        }
      }
    },
    "jobs": {
      "sync-releases": {
        "cron": {
          "pattern": "* * * * *",
          "timezone": "Etc/GMT",
          "tickerTimeout": 1000
        },
        "max-release-time": "1 year"
      }
    }
  },
  "database": {
    "path": "./data/app.db"
  },
  "remote": {
    "itunes": {
      "search": {
        "url": "https://itunes.apple.com/search",
        "searchArtists": {
          "limit": 8
        }
      },
      "lookup": {
        "url": "https://itunes.apple.com/lookup",
        "getLatestsArtistMusicReleases": {
          "limit": 70
        },
        "getLatestsArtistAlbumReleases": {
          "limit": 50
        }
      }
    }
  },
  "media": {
    "placeholderImage": "https://placehold.co/512"
  }
}

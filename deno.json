{
  "name": "@m4rc3l05/rss-hub",
  "version": "16.4.0",
  "tasks": {
    "api": "deno run -A --unstable-ffi src/apps/api/main.ts",
    "admin": "deno run -A --unstable-ffi src/apps/admin/main.ts",
    "feed": "deno run -A --unstable-ffi src/apps/feed/main.ts",
    "jobs:sync-releases": "deno run -A --unstable-ffi src/apps/jobs/sync-releases/main.ts",
    "dev:dbmate": "deno run -A --no-lock npm:dbmate -u 'sqlite:./data/app.db' -d ./src/database/migrations --no-dump-schema",
    "deps:lock": "deno cache --lock=deno.lock --lock-write src/**/*.ts ./.bin/*.ts",
    "deps": "deno cache --reload --lock=deno.lock src/**/*.ts ./.bin/*.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "lint": {
    "rules": {
      "include": ["verbatim-module-syntax"]
    }
  },
  "imports": {
    "#src/": "./src/",
    "@db/sqlite": "jsr:@db/sqlite@0.11.1",
    "@m4rc3l05/cron": "jsr:@m4rc3l05/cron@1.1.0",
    "@m4rc3l05/process-lifecycle": "jsr:@m4rc3l05/process-lifecycle@0.1.0",
    "@m4rc3l05/requester": "jsr:@m4rc3l05/requester@0.4.0",
    "@m4rc3l05/sqlite-tag": "jsr:@m4rc3l05/sqlite-tag@0.1.7",
    "@std/async": "jsr:@std/async@0.224.1",
    "@std/collections": "jsr:@std/collections@0.224.2",
    "@std/encoding": "jsr:@std/encoding@0.224.2",
    "@std/log": "jsr:@std/log@0.224.1",
    "@std/streams": "jsr:@std/streams@0.224.1",
    "@std/text": "jsr:@std/text@0.224.0",
    "@vinejs/vine": "npm:@vinejs/vine@2.0.0",
    "config": "npm:config@3.3.11",
    "feed": "npm:feed@4.2.2",
    "hono": "npm:hono@4.3.5",
    "lodash-es": "npm:lodash-es@4.17.21",
    "ms": "npm:ms@2.1.3"
  }
}

{
  "name": "@m4rc3l05/music-follower",
  "version": "17.3.19",
  "exports": "./deno.json",
  "tasks": {
    "api": {
      "description": "Run api app",
      "command": "deno run -A --cached-only --watch src/apps/api/main.ts"
    },
    "admin": {
      "description": "Run admin app",
      "command": "deno run -A --cached-only --watch src/apps/admin/main.ts"
    },
    "feed": {
      "description": "Run feed app",
      "command": "deno run -A --cached-only --watch src/apps/feed/main.ts"
    },
    "jobs:sync-releases": {
      "description": "Run sync releases job",
      "command": "deno run -A --cached-only --watch src/apps/jobs/sync-releases/main.ts"
    },
    "dev:pretty-logs": {
      "description": "Prettify logs",
      "command": "pino-pretty -m message --levelKey level --timestampKey datetime -k \"data.error,data.reason\" -c -C"
    },
    "dev:run-migrations": {
      "description": "Run db migrations",
      "command": "dbmate -u 'sqlite:./data/app.db' -d ./src/database/migrations --no-dump-schema up"
    },
    "pre:test": {
      "description": "Command to run before runing tests",
      "command": "deno eval \"import '@db/sqlite'\""
    },
    "test": {
      "description": "Run tests",
      "command": "ENV=test NODE_ENV=test deno test --allow-read --allow-env --allow-ffi --no-check --trace-leaks --parallel",
      "dependencies": ["pre:test"]
    },
    "check:fmt": {
      "description": "Run formatting checks",
      "command": "deno fmt --check"
    },
    "check:lint": {
      "description": "Run lint checks",
      "command": "deno lint"
    },
    "check:check": {
      "description": "Run check checks",
      "command": "deno check ."
    },
    "checks": {
      "description": "Run code checks",
      "dependencies": ["check:fmt", "check:lint", "check:check"]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "@hono/hono/jsx"
  },
  "lint": {
    "exclude": ["node_modules"],
    "rules": {
      "include": ["verbatim-module-syntax"]
    }
  },
  "fmt": {
    "exclude": ["node_modules"]
  },
  "unstable": ["fmt-sql"],
  "lock": {
    "frozen": true
  },
  "nodeModulesDir": "auto",
  "imports": {
    "#src/": "./src/",
    "@db/sqlite": "jsr:@db/sqlite@0.12.0",
    "@hono/hono": "jsr:@hono/hono@4.7.2",
    "@std/assert": "jsr:@std/assert@1.0.11",
    "@std/async": "jsr:@std/async@1.0.10",
    "@std/cache": "jsr:@std/cache@0.1.3",
    "@std/collections": "jsr:@std/collections@1.0.10",
    "@std/encoding": "jsr:@std/encoding@1.0.7",
    "@std/log": "jsr:@std/log@0.224.14",
    "@std/testing": "jsr:@std/testing@1.0.9",
    "@std/text": "jsr:@std/text@1.0.10",
    "@vinejs/vine": "npm:@vinejs/vine@3.0.0",
    "config": "npm:config@3.3.12",
    "dbmate": "npm:dbmate@2.26.0",
    "feed": "npm:feed@4.2.2",
    "ms": "npm:ms@2.1.3",
    "pino-pretty": "npm:pino-pretty@13.0.0",
    "pino-std-serializers": "npm:pino-std-serializers@^7.0.0",
    "simpledotcss": "npm:simpledotcss@2.3.3"
  }
}

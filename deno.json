{
  "name": "@m4rc3l05/music-follower",
  "version": "17.3.8",
  "exports": "./deno.json",
  "tasks": {
    "api": "deno run -A --cached-only src/apps/api/main.ts",
    "admin": "deno run -A --cached-only src/apps/admin/main.ts",
    "feed": "deno run -A --cached-only src/apps/feed/main.ts",
    "pretty-logs": "deno run -A --no-lock npm:pino-pretty@13.0.0 -m message --levelKey level --timestampKey datetime -k \"data.error,data.err\" -c -C",
    "dev:dbmate": "deno run -Ar --no-lock npm:dbmate@2.15.0 -u 'sqlite:./data/app.db' -d ./src/database/migrations --no-dump-schema",
    "jobs:sync-releases": "deno run -A --cached-only src/apps/jobs/sync-releases/main.ts",
    "pre:test": "deno eval \"import '@db/sqlite'\"",
    "test": {
      "command": "ENV=test NODE_ENV=test deno test -A --no-check --trace-leaks --parallel",
      "dependencies": ["pre:test"]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "@hono/hono/jsx"
  },
  "lint": {
    "exclude": ["node_modules"],
    "rules": {
      "include": ["verbatim-module-syntax"]
    }
  },
  "fmt": {
    "exclude": ["node_modules"]
  },
  "unstable": ["fmt-sql"],
  "lock": {
    "frozen": true
  },
  "imports": {
    "#src/": "./src/",
    "@db/sqlite": "jsr:@db/sqlite@0.12.0",
    "@hono/hono": "jsr:@hono/hono@4.6.12",
    "@m4rc3l05/process-lifecycle": "jsr:@m4rc3l05/process-lifecycle@0.1.1",
    "@m4rc3l05/sqlite-tag": "jsr:@m4rc3l05/sqlite-tag@0.2.0",
    "@std/assert": "jsr:@std/assert@1.0.8",
    "@std/async": "jsr:@std/async@1.0.9",
    "@std/cache": "jsr:@std/cache@0.1.3",
    "@std/collections": "jsr:@std/collections@1.0.9",
    "@std/encoding": "jsr:@std/encoding@1.0.5",
    "@std/log": "jsr:@std/log@0.224.11",
    "@std/testing": "jsr:@std/testing@1.0.5",
    "@std/text": "jsr:@std/text@1.0.8",
    "@vinejs/vine": "npm:@vinejs/vine@2.1.0",
    "config": "npm:config@3.3.12",
    "feed": "npm:feed@4.2.2",
    "ms": "npm:ms@2.1.3",
    "simpledotcss": "npm:simpledotcss@2.3.2"
  }
}

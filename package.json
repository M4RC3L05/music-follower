{
  "name": "music-follower",
  "version": "13.1.2",
  "description": "Simple self-host rss feed to get releases from artists",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "m4rc3l05",
  "license": "MIT",
  "imports": {
    "#src/*": "./src/*"
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "@typescript-eslint/member-ordering": "off",
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            [
              "internal",
              "sibling",
              "parent",
              "index"
            ],
            "object",
            "type"
          ],
          "distinctGroup": false,
          "newlines-between": "always",
          "pathGroups": [
            {
              "pattern": "#src/**",
              "group": "internal"
            }
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "**/public/**/*.ts",
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "@typescript-eslint/naming-convention": "off"
        }
      }
    ],
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "prettier": {
    "editorconfig": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "lint": "xo . --ext .ts && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint-staged": "lint-staged",
    "db:migrate": "dbmate -u 'sqlite:./data/app.db' -d ./src/common/database/migrations --no-dump-schema migrate",
    "dev:feed": "node --loader ts-node/esm --watch --no-warnings src/apps/http/feed/main.ts | pino-pretty",
    "dev:admin": "node --loader ts-node/esm --watch --no-warnings src/apps/http/admin/main.ts | pino-pretty",
    "dev:api": "node --loader ts-node/esm --watch --no-warnings src/apps/http/api/main.ts | pino-pretty",
    "dev:jobs:sync-releases": "node --loader ts-node/esm --watch --no-warnings src/apps/jobs/main.ts syncReleasesJob | pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.72",
    "@types/config": "^3.3.1",
    "@types/koa": "^2.13.9",
    "@types/koa__cors": "^4.0.1",
    "@types/koa__router": "^12.0.1",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-favicon": "^2.0.22",
    "@types/koa-static": "^4.0.2",
    "@types/lodash-es": "^4.17.9",
    "@types/ms": "^0.7.31",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.7",
    "dbmate": "^2.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "offline-github-changelog": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.8.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "typescript": "^5.2.2",
    "usehooks-ts": "^2.9.1",
    "xo": "^0.56.0"
  },
  "engines": {
    "node": "18.*.*"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@leafac/sqlite": "^4.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "config": "^3.3.9",
    "cron-parser": "^4.9.0",
    "feed": "^4.2.2",
    "http-errors": "^2.0.0",
    "json-schema-to-ts": "^2.9.2",
    "koa": "^2.14.2",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-favicon": "^2.1.0",
    "koa-proxies": "^0.12.3",
    "koa-static": "^5.0.0",
    "lodash-es": "^4.17.21",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.2",
    "patch-package": "^8.0.0",
    "pino": "^8.15.1",
    "ts-node": "^10.9.1"
  }
}

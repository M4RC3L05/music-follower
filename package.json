{
  "name": "music-follower",
  "version": "8.5.0",
  "description": "Simple self-host rss feed to get releases from artists",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "m4rc3l05",
  "license": "MIT",
  "imports": {
    "#src/*": "./src/*"
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            [
              "internal",
              "sibling",
              "parent",
              "index"
            ],
            "object",
            "type"
          ],
          "distinctGroup": false,
          "newlines-between": "always",
          "pathGroups": [
            {
              "pattern": "#src/**",
              "group": "internal"
            }
          ]
        }
      ]
    },
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "prettier": {
    "editorconfig": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "lint": "xo . --ext .ts && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint-staged": "lint-staged",
    "migrate": "node --loader ts-node/esm --no-warnings bin/migrate.ts | pino-pretty",
    "dev:feed": "node --loader ts-node/esm --watch --no-warnings src/apps/feed/main.ts | pino-pretty",
    "dev:admin": "node --loader ts-node/esm --watch --no-warnings src/apps/admin/main.ts | pino-pretty",
    "dev:jobs:sync-releases": "node --loader ts-node/esm --watch --no-warnings src/apps/jobs/main.ts job sync-releases | pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package",
    "test": "NODE_ENV=test ALLOW_CONFIG_MUTATIONS=true node --loader ts-node/esm --no-warnings bin/test.ts | tap-mocha-reporter classic",
    "test-coverage": "c8 --exclude \"src/utils/tests/**\" --exclude \"src/**/*.test.ts\" npm run test"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-favicon": "^2.0.21",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-session": "^5.10.6",
    "@types/koa-static": "^4.0.2",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.13.0",
    "@types/sinon": "^10.0.13",
    "@types/yargs": "^17.0.22",
    "c8": "^7.12.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "glob": "^8.1.0",
    "glob-promise": "^6.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "nock": "^13.3.0",
    "offline-github-changelog": "^3.0.1",
    "pino-pretty": "^9.2.0",
    "prettier": "^2.8.4",
    "sinon": "^15.0.1",
    "tap-mocha-reporter": "^5.0.3",
    "typescript": "^4.9.5",
    "xo": "^0.53.1"
  },
  "engines": {
    "node": "18.*.*"
  },
  "dependencies": {
    "@datasert/cronjs-matcher": "^1.2.0",
    "@datasert/cronjs-parser": "^1.2.0",
    "@koa/ejs": "^5.0.0",
    "@koa/router": "^12.0.0",
    "@leafac/sqlite": "^4.0.0",
    "@swc/core": "^1.3.35",
    "chalk": "^5.2.0",
    "config": "^3.3.9",
    "feed": "^4.2.2",
    "koa": "^2.14.1",
    "koa-basic-auth": "^4.0.0",
    "koa-better-flash": "^0.0.4",
    "koa-bodyparser": "^4.3.0",
    "koa-favicon": "^2.1.0",
    "koa-qs": "^3.0.0",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "lru-cache": "^7.14.1",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.0",
    "patch-package": "^6.5.1",
    "pino": "^8.10.0",
    "ts-node": "^10.9.1",
    "yargs": "^17.6.2"
  }
}

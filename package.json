{
  "name": "music-follower",
  "version": "14.9.0",
  "description": "Simple self-host rss feed to get releases from artists",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "m4rc3l05",
  "license": "MIT",
  "imports": {
    "#src/*": "./src/*"
  },
  "engines": {
    "node": ">=20.*.*"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "lint": "biome check . && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint-staged": "lint-staged",
    "db:migrate": "dbmate -u 'sqlite:./data/app.db' -d ./src/database/migrations --no-dump-schema migrate",
    "dev:feed": "node --loader ts-node/esm --watch --no-warnings src/apps/feed/main.ts | pino-pretty",
    "dev:admin": "node --loader ts-node/esm --watch --no-warnings src/apps/admin/main.ts | pino-pretty",
    "dev:api": "node --loader ts-node/esm --watch --no-warnings src/apps/api/main.ts | pino-pretty",
    "dev:jobs:sync-releases": "node --loader ts-node/esm --watch --no-warnings src/apps/jobs/main.ts sync-releases | pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package || :"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.104",
    "@types/config": "3.3.3",
    "@types/lodash-es": "4.17.12",
    "@types/ms": "0.7.34",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "dbmate": "2.11.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "offline-github-changelog": "3.0.1",
    "patch-package": "8.0.0",
    "pino-pretty": "10.3.1",
    "react": "18.2.0",
    "react-bootstrap": "2.10.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.21.3",
    "ts-node": "11.0.0-beta.1",
    "typescript": "5.3.3",
    "usehooks-ts": "2.9.5"
  },
  "dependencies": {
    "@hono/node-server": "1.4.0",
    "@hono/zod-validator": "0.1.11",
    "@leafac/sqlite": "4.0.0",
    "better-sqlite3": "9.3.0",
    "config": "3.3.10",
    "cron-parser": "4.9.0",
    "feed": "4.2.2",
    "hono": "3.12.6",
    "lodash-es": "4.17.21",
    "ms": "2.1.3",
    "node-fetch": "3.3.2",
    "pino": "8.17.2",
    "zod": "3.22.4"
  }
}

{
  "name": "music-follower",
  "version": "14.2.0",
  "description": "Simple self-host rss feed to get releases from artists",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "m4rc3l05",
  "license": "MIT",
  "imports": {
    "#src/*": "./src/*"
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/member-ordering": "off",
      "unicorn/no-array-reduce": "off",
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            [
              "internal",
              "sibling",
              "parent",
              "index"
            ],
            "object",
            "type"
          ],
          "distinctGroup": false,
          "newlines-between": "always",
          "pathGroups": [
            {
              "pattern": "#src/**",
              "group": "internal"
            }
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "**/public/**/*.{tsx,ts}",
        "rules": {
          "n/file-extension-in-import": "off",
          "import/no-extraneous-dependencies": "off",
          "@typescript-eslint/naming-convention": "off"
        }
      }
    ],
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "prettier": {
    "editorconfig": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "lint": "xo && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint-staged": "lint-staged",
    "db:migrate": "dbmate -u 'sqlite:./data/app.db' -d ./src/database/migrations --no-dump-schema migrate",
    "dev:feed": "node --loader ts-node/esm --watch --no-warnings src/apps/feed/main.ts | pino-pretty",
    "dev:admin": "node --loader ts-node/esm --watch --no-warnings src/apps/admin/main.ts | pino-pretty",
    "dev:api": "node --loader ts-node/esm --watch --no-warnings src/apps/api/main.ts | pino-pretty",
    "dev:jobs:sync-releases": "node --loader ts-node/esm --watch --no-warnings src/apps/jobs/main.ts syncReleasesJob | pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package || :"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/basic-auth": "^1.1.5",
    "@types/body-parser": "^1.19.4",
    "@types/config": "^3.3.2",
    "@types/http-errors": "^2.0.3",
    "@types/http-proxy": "^1.17.13",
    "@types/lodash-es": "^4.17.10",
    "@types/ms": "^0.7.33",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "dbmate": "^2.7.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "offline-github-changelog": "^3.0.1",
    "patch-package": "^8.0.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.17.0",
    "ts-node": "^11.0.0-beta.1",
    "typescript": "^5.2.2",
    "usehooks-ts": "^2.9.1",
    "xo": "^0.56.0"
  },
  "engines": {
    "node": ">=20.*.*"
  },
  "dependencies": {
    "@leafac/sqlite": "^4.0.0",
    "@m4rc3l05/sss": "github:M4RC3L05/sss#v1.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "basic-auth": "^2.0.1",
    "better-sqlite3": "^9.0.0",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "cron-parser": "^4.9.0",
    "feed": "^4.2.2",
    "http-errors": "^2.0.0",
    "http-proxy": "^1.18.1",
    "json-schema-to-ts": "^2.9.2",
    "lodash-es": "^4.17.21",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.2",
    "pino": "^8.16.1",
    "sirv": "^2.0.3"
  }
}

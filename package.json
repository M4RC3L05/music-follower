{
  "name": "music-follower",
  "version": "5.1.1",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "imports": {
    "#src/*": "./src/*"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "simple-import-sort"
    ],
    "extends": [
      "xo",
      "xo-typescript",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "prettier": {
    "editorconfig": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "knex": "ts-node ./node_modules/.bin/knex",
    "lint": "eslint . --ext .ts",
    "lint-staged": "lint-staged",
    "dev:rss": "nodemon src/apps/rss/main.ts | ./node_modules/.bin/pino-pretty",
    "dev:admin": "nodemon src/apps/admin/main.ts | ./node_modules/.bin/pino-pretty",
    "dev:sync-releases-task": "nodemon src/apps/sync-releases-task/main.ts | ./node_modules/.bin/pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/cron": "^2.0.0",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.8",
    "@types/koa-csrf": "^5.0.0",
    "@types/koa-ejs": "^4.3.0",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-session": "^5.10.6",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.7.23",
    "@types/node-cron": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "offline-github-changelog": "^2.5.0",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": "16.16.0"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@swc/core": "^1.3.3",
    "bcrypt": "^5.0.1",
    "better-sqlite3": "^7.6.2",
    "config": "^3.3.8",
    "cron": "^2.1.0",
    "feed": "^4.2.2",
    "http-graceful-shutdown": "^3.1.8",
    "knex": "^2.3.0",
    "koa": "^2.13.4",
    "koa-basic-auth": "^4.0.0",
    "koa-better-flash": "^0.0.4",
    "koa-bodyparser": "^4.3.0",
    "koa-csrf": "^5.0.1",
    "koa-ejs": "^4.3.0",
    "koa-qs": "^3.0.0",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "lru-cache": "^7.14.0",
    "node-fetch": "^3.2.10",
    "objection": "^3.0.1",
    "patch-package": "^6.4.7",
    "pino": "^8.6.0",
    "ts-node": "^10.9.1"
  }
}

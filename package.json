{
  "name": "music-follower",
  "version": "6.1.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "imports": {
    "#src/*": "./src/*",
    "#tests/*": "./tests/*"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "@swc/jest"
    },
    "moduleNameMapper": {
      "#tests/(.+).js$": "<rootDir>/tests/$1.ts",
      "#src/(.+).js$": "<rootDir>/src/$1.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/database/*",
      "<rootDir>/tests/*"
    ],
    "coverageReporters": [
      "text"
    ],
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "simple-import-sort",
      "jest"
    ],
    "extends": [
      "plugin:jest/recommended"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "prettier": {
    "editorconfig": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "knex": "ts-node ./node_modules/.bin/knex",
    "lint": "xo . --ext .ts && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint-staged": "lint-staged",
    "dev:feed": "nodemon src/apps/feed/main.ts | ./node_modules/.bin/pino-pretty",
    "dev:admin": "nodemon src/apps/admin/main.ts | ./node_modules/.bin/pino-pretty",
    "dev:jobs:sync-releases": "nodemon src/apps/jobs/main.ts -- job sync-releases | ./node_modules/.bin/pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --no-cache"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@swc/jest": "^0.2.23",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/cron": "^2.0.0",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.8",
    "@types/koa-csrf": "^5.0.0",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-session": "^5.10.6",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.11.5",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "nock": "^13.2.9",
    "nodemon": "^2.0.20",
    "offline-github-changelog": "^3.0.0",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "supertest-fetch": "^1.5.0",
    "typescript": "^4.8.4",
    "xo": "^0.52.4"
  },
  "engines": {
    "node": "16.18.0"
  },
  "dependencies": {
    "@koa/ejs": "^5.0.0",
    "@koa/router": "^12.0.0",
    "@swc/core": "^1.3.10",
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^7.6.2",
    "config": "^3.3.8",
    "cron": "^2.1.0",
    "feed": "^4.2.2",
    "knex": "^2.3.0",
    "koa": "^2.13.4",
    "koa-basic-auth": "^4.0.0",
    "koa-better-flash": "^0.0.4",
    "koa-bodyparser": "^4.3.0",
    "koa-csrf": "^5.0.1",
    "koa-qs": "^3.0.0",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "lru-cache": "^7.14.0",
    "node-fetch": "^3.2.10",
    "objection": "^3.0.1",
    "patch-package": "^6.5.0",
    "pino": "^8.7.0",
    "ts-node": "^10.9.1",
    "yargs": "^17.6.0"
  }
}

{
  "name": "music-follower",
  "version": "14.8.1",
  "description": "Simple self-host rss feed to get releases from artists",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "m4rc3l05",
  "license": "MIT",
  "imports": {
    "#src/*": "./src/*"
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "n/file-extension-in-import": "off",
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/member-ordering": "off",
      "unicorn/no-array-reduce": "off",
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            [
              "internal",
              "sibling",
              "parent",
              "index"
            ],
            "object",
            "type"
          ],
          "distinctGroup": false,
          "newlines-between": "always",
          "pathGroups": [
            {
              "pattern": "#src/**",
              "group": "internal"
            }
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "**/public/**/*.{tsx,ts}",
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "@typescript-eslint/naming-convention": "off"
        }
      }
    ],
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "prettier": {
    "editorconfig": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "lint": "xo && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint-staged": "lint-staged",
    "db:migrate": "dbmate -u 'sqlite:./data/app.db' -d ./src/database/migrations --no-dump-schema migrate",
    "dev:feed": "node --loader ts-node/esm --watch --no-warnings src/apps/feed/main.ts | pino-pretty",
    "dev:admin": "node --loader ts-node/esm --watch --no-warnings src/apps/admin/main.ts | pino-pretty",
    "dev:api": "node --loader ts-node/esm --watch --no-warnings src/apps/api/main.ts | pino-pretty",
    "dev:jobs:sync-releases": "node --loader ts-node/esm --watch --no-warnings src/apps/jobs/main.ts sync-releases | pino-pretty",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package || :"
  },
  "devDependencies": {
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.101",
    "@types/config": "3.3.3",
    "@types/lodash-es": "4.17.12",
    "@types/ms": "0.7.34",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "dbmate": "2.9.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "offline-github-changelog": "3.0.1",
    "patch-package": "8.0.0",
    "pino-pretty": "10.3.0",
    "prettier": "3.1.1",
    "react": "18.2.0",
    "react-bootstrap": "2.9.1",
    "react-dom": "18.2.0",
    "react-router-dom": "6.21.0",
    "ts-node": "11.0.0-beta.1",
    "typescript": "5.3.3",
    "usehooks-ts": "2.9.1",
    "xo": "0.56.0"
  },
  "engines": {
    "node": ">=20.*.*"
  },
  "dependencies": {
    "@hono/node-server": "1.3.3",
    "@hono/zod-validator": "0.1.11",
    "@leafac/sqlite": "4.0.0",
    "better-sqlite3": "9.2.2",
    "config": "3.3.9",
    "cron-parser": "4.9.0",
    "feed": "4.2.2",
    "hono": "3.11.8",
    "lodash-es": "4.17.21",
    "ms": "2.1.3",
    "node-fetch": "3.3.2",
    "pino": "8.17.1",
    "zod": "3.22.4"
  }
}
